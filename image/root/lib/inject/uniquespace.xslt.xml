<?xml version="1.0"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:exsl="http://exslt.org/common" extension-element-prefixes="exsl" exclude-result-prefixes="exsl" version="1.0">
    <xsl:template match="/">
        <xsl:apply-templates select="scripts"/>
    </xsl:template>
    <xsl:template match="scripts">
        <xsl:apply-templates select="script"/>
    </xsl:template>
    <xsl:template match="script">
        <xsl:param name="href" value="generate-id(.)"/>
        <exsl:document href="@name">
            <xsl:text>
<![CDATA[
FROM alpine:3.4
RUN \
    apk update && \
    apk upgrade && \
    apk add --no-cache sudo && \
    apk add --no-cache docker && \
    mkdir /opt && \
    mkdir /opt/uniquespace/bin && \
    mkdir /opt/uniquespace/sbin && \
    rm -rf /var/cache/apk/*
ENTRYPOINT [""]
CMD []
]]>
            </xsl:text>
        </exsl:document>
    </xsl:template>
</xsl:stylesheet>
